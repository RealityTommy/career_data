datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-py"
}

// Career model
model Career {
  id          String   @id @default(uuid()) @db.Uuid
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Industry model
model Industry {
  id          String   @id @default(uuid()) @db.Uuid
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Credential model
model Credential {
  id          String   @id @default(uuid()) @db.Uuid
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Skill model
model Skill {
  id          String   @id @default(uuid()) @db.Uuid
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ONET Import model
model OnetImport {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  industries  OnetIndustry[]   @relation(name: "OnetImportIndustries")
  occupations OnetOccupation[] @relation(name: "OnetImportOccupations")
  skills      OnetSkill[]      @relation(name: "OnetImportSkills")
  abilities   OnetAbility[]    @relation(name: "OnetImportAbilities")
}

// ONET Industry model
model OnetIndustry {
  id        String   @id @default(uuid()) @db.Uuid
  title     String   @unique
  code      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  imports OnetImport[] @relation(name: "OnetImportIndustries")
}

// ONET Occupation model
model OnetOccupation {
  id        String   @id @default(uuid()) @db.Uuid
  title     String   @unique
  code      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  imports OnetImport[] @relation(name: "OnetImportOccupations")
}

// ONET Skill model
model OnetSkill {
  id        String   @id @default(uuid()) @db.Uuid
  name      String   @unique
  code      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  imports OnetImport[] @relation(name: "OnetImportSkills")
}

// ONET Ability model
model OnetAbility {
  id        String   @id @default(uuid()) @db.Uuid
  name      String   @unique
  code      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  imports OnetImport[] @relation(name: "OnetImportAbilities")
}
