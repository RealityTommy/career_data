datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-py"
}

// Career model
model Career {
  id          String   @id @default(uuid()) @db.Uuid
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Industry model
model Industry {
  id          String   @id @default(uuid()) @db.Uuid
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Credential model
model Credential {
  id          String   @id @default(uuid()) @db.Uuid
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Skill model
model Skill {
  id          String   @id @default(uuid()) @db.Uuid
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ONET Industry model
model OnetIndustry {
  id        String   @id @default(uuid()) @db.Uuid
  name      String   @unique
  code      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ONET Occupation model
model OnetOccupation {
  id               String             @id @default(uuid()) @db.Uuid
  name             String
  code             String
  percent_employed Float
  category         OnetCareerCategory
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
}

// ONET Skill model
model OnetSkill {
  id        String   @id @default(uuid()) @db.Uuid
  name      String   @unique
  code      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ONET Ability model
model OnetAbility {
  id        String   @id @default(uuid()) @db.Uuid
  name      String   @unique
  code      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ONET "category" of careers based on the percentage of workers employed in a specific industry.
enum OnetCareerCategory {
  MOST
  SOME
}
